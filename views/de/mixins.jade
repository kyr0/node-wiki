mixin renderStaticNavigation(navigationContent)
    h3.navigationTitle Navigation
    div#staticNavigation.staticNavigation.well!=navigationContent

mixin renderNavigation(navigationItems)
    h3.dynamicNavigationTitle Unterseiten
    ul.nav.nav-list

        each navigationItem in navigationItems
            li
                a(href=navigationItem.path)= navigationItem.title

mixin attachments(files)
    h3.attachmentsTitle Anh√§nge
    ul#attachments.attachments.plain-list
        for file in files
            li 
                a(href="/attachments/#{page._id}/#{file}", title="#{file}")
                    i.icon-file
                    = file
                a.icon-remove-sign

